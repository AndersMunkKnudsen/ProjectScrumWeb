@model IEnumerable<ScrumWeb.Models.Iterations>

@{
    ViewBag.Title = "Iterations: " + User.Identity.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*INTRO SECTION START*@
<br />
<br />
<br />
<div class="headline">
    <h2>Your Iterations</h2>
    <p class="createBtn" title="Add new iteration">
        @Html.ActionLink("+", "Create")
    </p>
</div>
<br />
@*INTRO SECTION END*@
<table class="table" id="iterationsTable">
    <tr>
        @if (Model.Count() == 0)
        {
            <th>No iterations have been created yet...</th>
        }
        else
        {
            <th>
                @Html.DisplayNameFor(model => model.IterationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IterationDescription)
            </th>
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr id="@item.IterationID">
            <td>
                @Html.DisplayFor(modelItem => item.IterationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IterationDescription)
            </td>
            <td>
                <a title="Edit iteration" class="actionLinksBtn" href="@Url.Action("Edit", "Iterations", new { id = item.IterationID })">
                    <i class="fas fa-edit"></i>
                </a>
                <a title="Delete iteration" class="actionLinksBtn" onclick="DeleteIteration('@item.IterationID')">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>
    }
</table>